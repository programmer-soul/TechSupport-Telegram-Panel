########################
# Core application
########################

SECRET_KEY=change-me-secret              # Секретный ключ приложения (подписи, хэши, сессии)
CORS_ORIGINS=https://example.com          # Разрешённые CORS origin'ы – ваш URL панели

########################
# Database (PostgreSQL)
########################

POSTGRES_USER=postgres                   # Пользователь PostgreSQL
POSTGRES_PASSWORD=postgres               # Пароль PostgreSQL
POSTGRES_DB=support                      # Название базы данных
POSTGRES_DSN=postgresql+asyncpg://postgres:postgres@db:5432/support  # DSN для async подключения
# Внешнее подключение к БД (с хоста) идёт через порт 5433

########################
# Storage
########################

STORAGE_BACKEND=local                    # Тип хранилища (local / s3 / etc)
STORAGE_LOCAL_PATH=/data/uploads         # Путь для локального хранения файлов
STORAGE_PUBLIC_BASE_URL=/static          # Публичный URL для доступа к файлам

########################
# Bot internal
########################

BOT_INTERNAL_TOKEN=change-me-token       # Токен для внутреннего общения панели и бота
BOT_BASE_URL=http://bot:8081             # Внутренний URL Telegram-бота (Docker / internal network)

########################
# Telegram Bot Webhook
########################

WEBHOOK_URL=https://example.com           # Публичный URL панели (для Telegram webhook)
WEBHOOK_PATH=/webhook/telegram            # Путь webhook'а Telegram-бота

########################
# Auth / Security
########################

PANEL_ORIGIN=https://example.com          # Origin панели (для cookie / auth) – ваш URL панели
COOKIE_SECURE=true                        # Использовать Secure cookies (true для HTTPS)
JWT_ISS=support-panel                    # JWT issuer
JWT_AUD=support-panel                    # JWT audience
JWT_PRIVATE_KEY=/backend/keys/jwt_private.pem # Путь к приватному JWT ключу
JWT_PUBLIC_KEY=/backend/keys/jwt_public.pem   # Путь к публичному JWT ключу

########################
# Passkeys / WebAuthn
########################

RP_ID=example.com                        # Relying Party ID (домен без https://)
RP_ORIGIN=https://example.com             # Origin для WebAuthn / Passkeys – ваш URL панели

########################
# Domain
########################

DOMAIN=example.com                       # Основной домен панели (без https://)
